{
  "name": "oidc-vc",
  "version": "0.1.0",
  "description": "This project makes the APIs of OIDC, OAuth 2.x, OID4VCI, OID4VP, and SIOP v2 secure and easy to use.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run typecheck && vite build",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm test && npm run build",
    "auth-flow": "NODE_ENV=development tsx scripts/authorizationCodeFlow.ts"
  },
  "keywords": [
    "oidc",
    "vc",
    "verifiable-credentials",
    "typescript"
  ],
  "author": "Yasuo Higa",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^17.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@noble/hashes": "^1.3.0",
    "u8a-utils": "^1.0.12",
    "zod": "^3.23.8"
  }
}
